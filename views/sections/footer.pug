mixin footer(quote, author)
	footer.footer
		.footer__top
			.footer__part.footer__part--left
				p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool
			.footer__part.footer__part--links
				ul.footer__links
					li.footer__links-item
						a(href="./works").footer__links-link Мои работы
					li.footer__links-item
						a(href="./about").footer__links-link Обо мне
					li.footer__links-item
						a(href="./blog").footer__links-link Блог
					li.footer__links-item
						a(href="./auth").footer__links-link Авторизация
					li.footer__links-item.footer__links-item--last
				- var socials = [ { item: 'vk', link: 'https://vk.com/id13047302'}, { item: 'github', link: 'https://github.com/3elik'}, {item:'in', link: 'https://www.linkedin.com/in/alex-herbut-277343106/'}]
				.socials.socials--footer
					ul.socials__list
						each social in socials
							li.socials__item
								a(href=`${social.link}` class=`socials__link socials__link--${social.item}` target="_blank")
									svg(class=`socials__img socials__img--${social.item}`)
										use(xlink:href=`./assets/img/sprite.svg#${social.item}`)
			.footer__part.footer__part--quote.blockquote
				p.blockquote__quote #{quote}
				p.blockquote__author - #{author}
		.footer__copyrights.copyright
			p
				span.copyright__author © Владимир Астахов
				span.copyright__delimeter!= " | "
				span.copyright__with-love создано с любовью в LoftSchool | 2016